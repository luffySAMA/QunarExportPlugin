{
  "name": "携程航班导出插件",
  "description": "导出携程网的航班查询结果",
  "version": "1.0",
  "permissions": ["declarativeContent"],
  "page_action": {
    "default_icon": "assets/logo.png",
    "default_title": "导出结果"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistence": false
  },
  "content_scripts": [
    {
      "matches": ["http://flights.ctrip.com/*"],
      "js": [
        "js/FileSaver.min.js",
        "js/flight/flight-info.js",
        "js/flight/query-selector.js",
        "js/flight/direct-flight-creator.js",
        "js/flight/stop-flight-creator.js",
        "js/flight/international-flight-creator.js",
        "js/main.js"
      ]
    }
  ],
  "manifest_version": 2
}
